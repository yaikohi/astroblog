{
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": true,
  "overrides": [
    {
      "files": [
        ".*",
        "*.json",
        "*.md",
        "*.toml",
        "*.yml"
      ],
      "options": {
        "useTabs": false
      }
    }
  ],
  "astroSortOrder": "markup | styles",
  "astroAllowShorthand": false,
  "pluginSearchDirs": [
    "./node_modules"
  ],
  "plugins": [
    "prettier-plugin-astro"
  ]
}