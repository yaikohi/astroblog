---
export interface Props {
  prevUrl: string;
  nextUrl: string;
}

const { prevUrl, nextUrl } = Astro.props;
---

<div class="my-12">
  <nav class="flex justify-between max-w-2xl">
    <a
      class="hover:text-violet-800 hover:underline hover:underline-offset-8"
      href={prevUrl || "#"}
      aria-label="Previous page"
      >Previous
    </a>
    <a
      class="hover:text-violet-800 hover:underline hover:underline-offset-8"
      href={nextUrl || "#"}
      aria-label="Next page">Next</a
    >
  </nav>
</div>
